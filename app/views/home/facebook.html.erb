<div class='panel'>
  <div class='form_and_image'>
    <div class='image'>
      <%= image_tag('logo.png') %>
    </div>
    <%= render 'search_form' %>
  </div>
  
  <div class='list_and_map'>
    <div class='list'>
      <% if @routes.size > 0 %>
        <%= render :template => 'routes/index' %>
      <% end %>
    </div>
    <div class='map' id='map'>
    </div>
  </div>
</div>